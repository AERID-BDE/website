<link rel="stylesheet" href="/css/admin.home.css" type="text/css">

<%- include("../../../partials/navbar") %>
<%- include("../../../partials/admin/navbar.ejs") %>
<br>
<div>
    <a href="/admin/events/new">Ajouter un evenement</a>
</div>

<div>

    <% events.forEach( event => { %>

        <div>
            <h2><%= event.title %></h2>
            <p>Prix : <%= event.price %></p>
            <p> <%= event.eventDate %></p>
            <p>Lieu : <%= event.location %></p>
            <p>Description de l'événement : <%= event.description %></p>
            <img src="<%= event.image %>" alt="Image evenement">

            <a href="/admin/events/edit">Editer</a>

        </div>

    <% }) %>
</div>