<h2>Editer un événement en cours</h2>

<div>
    <form method="post" action="/admin/events/edit">
        <label for="title">Titre de l'évenement</label>
        <input type="text" id="title" name="title" value="<%= myEvent.title %>">

        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= myEvent.description %>">

        <label for="location">Lieu</label>
        <input type="text" id="location" name="location" value="<%= myEvent.location %>">

        <label for="eventDate">Date de l'évenement</label>
        <input type="date" id="eventDate" name="eventDate" value="<%= myEvent.eventDate %>">

        <label for="price">Prix</label>
        <input type="number" step="0,01" id="price" name="price" value="<%= myEvent.price %>">

        <label for="image">URL de l'image</label>
        <input type="text" id="image" name="image" value="<%= myEvent.image %>">

        <button type="submit">Editer</button>
        <a href="/admin/events" >Annuler</a>

    </form>
</div>
