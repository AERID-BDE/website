<div class="new-product">
    <form action="/admin/products/new" method="post">
        <div class="title">
            <h1>Nouveau product</h1>
        </div>
        <div class="input-group title">
            <label for="name">Nom</label>
            <input type="text" name="name" id="name" required>
        </div>
        <div class="input-group image">
            <label for="price">Prix</label>
            <input type="number" step="0.01" name="price" id="price" required>
        </div>
        <div class="input-group description">
            <label for="image">Image</label>
            <textarea name="image" id="image" required></textarea>
        </div>
        <div class="input-group description">
            <label for="archived">Archivage</label>
            <textarea name="archived" id="archived" required></textarea>
        </div>
        <div class="buttons">
            <button class="button confirm-button" type="submit">Cr√©er</button>
            <a class="button info-button" href="/admin/products">Retour</a>
        </div>
    </form>
</div>